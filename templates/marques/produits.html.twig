{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link href="{{ asset('css/liste_produits.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}

    <div class=" row">
        {% for produit in produits %}
            <div class="col-xl-3 square col-sm-6 mb-2">
                <div class="card">
                    <div class="card-header d-flex justify-content-center">
                        <img src="{{asset('/images/')~produit.image}}" class="img-fluid card-img-top" id="pictures" alt="Photo smartphone">
                    </div>
                    <div class="card-body">
                        <p class="card-title"><b>{{ produit.nomProduit }}</b></p>
                        <h5 class="card-text">{{ produit.libelleProduit }}</h5>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('produits_show', {'id': produit.id}) }}" class="btn btn-dark btn-block">Voir plus</a>
                        <span class="h4 mt-auto ">{{ produit.prixProduit }} â‚¬</span>
                    </div>
                </div>
            </div>
        {% else %}
            <div>
                <p colspan="8">no product found</p>
            </div>
        {% endfor %}
    </div>

{% endblock %}