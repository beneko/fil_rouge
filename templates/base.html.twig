<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Link font awsem Css #}
        {# Link Bootstrap Css #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

        {# Link style.css #}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {# Nav header #}
        <header>
            <div class="container">
                <div class="row p-5">
                    {# Logo #}
                    <div class="col-sm-6 col-lg-4">
                        <a href="">
                            <img src="{{ asset('images/logo.jpg') }}" alt="Digitall" >
                        </a>
                    </div>

                    {#  search #}
                    <div class="col-sm-12 col-lg-6">
                        <form class="">
                            <div class="form-group">
                                <input type="text"  placeholder="Search">
                                <button type="submit" class="btn"><span class="fa fa-search"></span></button>
                            </div>
                        </form>
                    </div>

                    {# navbar button #}
                    <div class="col-sm-6 col-lg-2">
                        <div class="form-group">

                            <button type="submit" class="btn"><span class="fa fa-user-plus"></span></button>
                           
                            <button type="submit" class="btn"><span class="fa fa-shopping-car"></span></button>
                        </div>

                    </div>
                </div>

                {# Nav Acceuil #}
                <div class="row">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

                        <a class="navbar-brand" href="">Accueil</a>
                        <button class="navbar-toggler" type="button"aria-controls="navbarNav" >
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Smartphones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Tablettes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">PC</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Laptop</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Photo & video</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Accessoires</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>

        {# body #}
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        {# footer #}
        <footer>
            <div class="">

            </div>

        </footer>
        {# Link font awsem Css #}
        <script src="https://kit.fontawesome.com/e8079807ba.js" crossorigin="anonymous"></script>

        {# Link Bootstrap Js #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    </body>
</html>
