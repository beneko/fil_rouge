            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        {# Nav header #}
        <header>
            <div class="container">
                <div class="row p-5 justify-content-start">
                    {# Logo #}
                    <div class="col-sm-6 col-lg-7 align-self-center">
                        <a href="">
                            <img src="{{ asset('images/logo.jpg') }}" alt="Digitall" >
                        </a>
                    </div>

                    {#  search #}
                    <div class="col-sm-12 col-lg-3 align-self-center">
                        <form action="server.php" method="post">
                                <input type="text"  placeholder="Search" name="searchVal" class="search">
                                <button type="submit" class="submit"><i class="spansearch fa fa-search"></i></button>
                        </form>
                    </div>

                    {# navbar button #}
                    <div class="col-sm-6 col-lg-2 align-self-center">
                        <div class="form-group">
                            <button type="submit" class="btn"><span class="fa fa-user-plus"></span></button>

                            <button type="submit" class="btn"><span class="fas fa-shopping-cart"></span></button>
                        </div>
                    </div>
                </div>

                {# Nav Acceuil #}
                <div class="row">
                    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">

                        <a class="navbar-brand" href="">Accueil</a>
                        <button class="navbar-toggler" type="button"aria-controls="navbarNav" >
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="justify-content-center collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Smartphones</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Tablettes</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">PC</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Laptop</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Photo & video</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Accessoires</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </header>

        {# body #}
        <div class="container py-5">
            {% block body %}{% endblock %}
        </div>

        <!-- Footer -->
        <footer class="text-center text-lg-start bg-light text-muted">
            <!-- Section: Links  -->
            <section class="foot pt-1">
                <div class="container text-center text-md-start mt-5">
                    <!-- Grid row -->
                    <div class="row mt-3">
                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                            <!-- Content -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                <i class="fas fa-gem me-3"></i> DIGITALL
                            </h6>
                            <p>
                                Ici, vous pouvez utiliser des lignes et des colonnes pour organiser le contenu de votre pied de page.
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit.
                            </p>
                        </div>

                        <!-- Grid column -->
                        <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                            <!-- Links -->
                            <h6 class="text-uppercase fw-bold mb-4">
                                SERVICE CLIENT
                            </h6>
                            <p>
                                <a href="#" class="text-reset">Conseiler client</a>
                            </p>
                            <p>
                                <a href="#" class="text-reset">Paramètres</a>
                            </p>
                            <p>
