{% block stylesheets %}
    {#{{ encore_entry_link_tags('app') }}#}
    <link href="{{ asset('css/liste_produits.css')}}" rel="stylesheet">
{% endblock %}


{% extends 'base.html.twig' %}
{% block title %}Produits index{% endblock %}
{% block body %}
        <h1 class="mt-3 mb-4">Products</h1>
        <div class=" row">
            {% for produit in produits %}
                <div class="col-xl-3 square col-sm-6 mb-2">
                    <div class="card">
                        <div class="card-header text-center">
                            <img src="{{asset('/images/')~produit.image}}" class="img-fluid card-img-top " id="pictures" alt="Photo smartphone">
                        </div>
                        <div class="card-body">
                            <h4 class="card-title "><b>{{ produit.nomProduit }}</b></h4>
                            <h6 class="mb-3 card-text one_line">{{ produit.libelleProduit }}</h6>
                            <p class="h5 mt-auto text-danger">{{ produit.prixProduit }} â‚¬</p>
                        </div>
                        <div class="card-footer ">
                                <a href="{{ path('produits_show', {'id': produit.id}) }}" class="btn btn-outline-danger  btn-block rounded-pill">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div>
                    <p colspan="8">no product found</p>
                </div>
            {% endfor %}
        </div>
{% endblock %}

