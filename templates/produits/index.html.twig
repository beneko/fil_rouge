{% extends 'base.html.twig' %}
{% block title %}Produits index{% endblock %}
{% block body %}
        <h1 class="mt-3 mb-4">Products</h1>
        <div class=" row">
            {% for produit in produits %}
                <div class="col-xl-3 square col-sm-6 mb-2">
                    <div class="card">
                        <div class="card-header text-center">
                            <img src="{{asset('/images/')~produit.image}}" class="img-fluid card-img-top " id="pictures" alt="Photo smartphone">
                        </div>
                        <div class="card-body">
                            <p class="display-6 card-title"><b>{{ produit.nomProduit }}</b> </p>
                            <h5 class=" card-text">{{ produit.libelleProduit }}</h5>
                            <div class="d-flex justify-content-between align-item-center">
                                <a href="#" class="btn btn-dark  btn-block">Voir plus</a>
                                <span class="h4 mt-auto">{{ produit.prixProduit }} â‚¬</span>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div>
                    <p colspan="8">no product found</p>
                </div>
            {% endfor %}
        </div>
{% endblock %}