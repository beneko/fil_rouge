{% extends 'base.html.twig' %}

{% block title %}Votre Profil{% endblock %}

{% block body %}
    <div class="row justify-content-center border border-4 border-secondary rounded m-5">
        <div class="col-12 col-md-8 p-5">
            <h1>Votre Profil</h1>
            <table class="table">
                <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ utilisateur.nom }}</td>
                </tr>
                <tr>
                    <th>Prenom</th>
                    <td>{{ utilisateur.prenom }}</td>
                </tr>
                <tr>
                    <th>Adresse mail</th>
                    <td>{{ utilisateur.mail }}</td>
                </tr>

                </tbody>
            </table>
            <div class="d-grid gap-2 d-sm-block">
                <a class="btn btn-danger" href="{{ path('utilisateurs_edit', {'id': utilisateur.id}) }}">Modifier</a>
                <a class="btn btn-secondary" href="{{ path('utilisateurs_index') }}">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
