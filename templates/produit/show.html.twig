{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}
 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('css/styleH.css') }}">
 {% endblock %}


{% block body %}
    <h1>{{ produit.nomProduit }}</h1>

    <div class="content d-flex">
        <div class="col-3">
            <img src="{{asset('/images/')~produit.image}}">
        </div>

        <div class="col-6">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>NomProduit</th>
                        <td>{{ produit.nomProduit }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ produit.libelleProduit }}</td>
                    </tr>
                    <tr>
                        <th>Prix du {{ produit.nomProduit }}</th>
                        <td>{{ produit.prixProduit }}</td>
                    </tr>
                    <tr>
                        <th>Quantit√© restante du {{ produit.nomProduit }}</th>
                        <td>{{ produit.stockProduit }}</td>
                    </tr>
                    <tr>
                        <th>Taux de Tva inclus</th>
                        <td>{{ produit.tauxTva }}</td>
                    </tr>
                    <tr>
                        <th>Poids du {{ produit.nomProduit }} en kg</th>
                        <td>{{ produit.pdsProduit }}</td>
                    </tr>

                    </tbody>
                </table>

            </div>


    </div>

    <div class="d-flex flex-row">
    <a href="{{ path('produit_index') }}"class="btn btn-dark m-0">Retour Liste</a>

    <a href="{{ path('produit_edit', {'idProduit': produit.idProduit}) }}" class="btn btn-warning m-0">Modifier</a>

   {{ include('produit/_delete_form.html.twig') }}
    </div>
{% endblock %}
