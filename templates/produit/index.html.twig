{% extends 'base.html.twig' %}

{% block title %}Produit index{% endblock %}

{% block body %}
    <h1>Produit index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdProduit</th>
                <th>NomProduit</th>
                <th>LibelleProduit</th>
                <th>PrixProduit</th>
                <th>StockProduit</th>
                <th>TauxTva</th>
                <th>PdsProduit</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td>{{ produit.idProduit }}</td>
                <td>{{ produit.nomProduit }}</td>
                <td>{{ produit.libelleProduit }}</td>
                <td>{{ produit.prixProduit }}</td>
                <td>{{ produit.stockProduit }}</td>
                <td>{{ produit.tauxTva }}</td>
                <td>{{ produit.pdsProduit }}</td>
                <td>{{ produit.image }}</td>
                <td>
                    <a href="{{ path('produit_show', {'idProduit': produit.idProduit}) }}">show</a>
                    <a href="{{ path('produit_edit', {'idProduit': produit.idProduit}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('produit_new') }}">Create new</a>
{% endblock %}
